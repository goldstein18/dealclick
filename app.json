{
  "expo": {
    "name": "DealClick",
    "slug": "dealclick",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "dealclick",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dealclick.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSFaceIDUsageDescription": "Usamos Face ID para que puedas iniciar sesión de manera rápida y segura.",
        "NSPhotoLibraryUsageDescription": "DealClick necesita acceso a tu galería de fotos para que puedas seleccionar imágenes de propiedades y actualizar tu foto de perfil.",
        "NSCameraUsageDescription": "DealClick necesita acceso a tu cámara para que puedas tomar fotos de propiedades y actualizar tu foto de perfil.",
        "NSPhotoLibraryAddUsageDescription": "DealClick necesita permiso para guardar fotos de propiedades en tu galería."
      }
    },
    "android": {
      "package": "com.dealclick.mobile",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      "expo-web-browser",
      "expo-local-authentication",
      "expo-updates"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "updates": {
      "url": "https://u.expo.dev/ba99d148-8939-4863-a567-f959a8d14367",
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "ba99d148-8939-4863-a567-f959a8d14367"
      }
    }
  }
}
